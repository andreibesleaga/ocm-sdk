{
  "dxt_version": "0.1",
  "name": "ocm-mcp",
  "version": "0.6.0-beta",
  "description": "The official MCP Server for the Ocm API",
  "author": {
    "name": "Ocm"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/andreibesleaga/ocm-sdk.git"
  },
  "homepage": "https://github.com/andreibesleaga/ocm-sdk/tree/main/packages/mcp-server#readme",
  "documentation": "https://openchargemap.org/site/about",
  "server": {
    "type": "node",
    "entry_point": "${__dirname}/index.js",
    "mcp_config": {
      "command": "node",
      "args": ["${__dirname}/index.js"],
      "env": {
        "OCM_API_KEY": "${user_config.OCM_API_KEY}",
        "OCM_API_KEY": "${user_config.OCM_API_KEY}",
        "OCM_USERNAME": "${user_config.OCM_USERNAME}"
      }
    }
  },
  "user_config": {
    "OCM_API_KEY": {
      "title": "api_key",
      "description": "",
      "required": false,
      "type": "string"
    },
    "OCM_API_KEY": {
      "title": "api_key_header",
      "description": "",
      "required": false,
      "type": "string"
    },
    "OCM_USERNAME": {
      "title": "bearer",
      "description": "",
      "required": false,
      "type": "string"
    }
  },
  "tools_generated": true,
  "compatibility": {
    "runtimes": {
      "node": ">=18.0.0"
    }
  },
  "keywords": ["api"]
}
